<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:paddingTop="30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimonActivity">

    <LinearLayout
        android:id="@+id/gameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/simongame"
        android:orientation="vertical"
        android:layout_width="400dp"
        android:layout_height="400dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.simon.SimonCellType
                android:id="@+id/greenCell"
                android:scaleType="fitXY"
                android:src="@drawable/green"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <com.example.simon.SimonCellType
                android:id="@+id/redCell"
                android:scaleType="fitXY"
                android:src="@drawable/red"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.example.simon.SimonCellType
            android:id="@+id/yellowCell"
            android:scaleType="fitXY"
            android:src="@drawable/yellow"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <com.example.simon.SimonCellType
            android:id="@+id/blueCell"
            android:scaleType="fitXY"
            android:src="@drawable/blue"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/scoreMessage"
        android:paddingBottom="50dp"
        android:gravity="center"
        android:text=""
        android:fontFamily="@font/megafont"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>